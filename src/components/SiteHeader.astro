---
const nav = [
  { href: "/services/", label: "Services" },
  { href: "/identify/", label: "Identify" },
  { href: "/blog/", label: "Blog" },
  { href: "/museum/", label: "Archives" },
  { href: "/contact/", label: "Contact" },
];
---
<header class="sticky top-0 z-50 border-b border-white/10 bg-zinc-950/85 backdrop-blur shadow-[0_1px_0_0_rgba(255,255,255,0.06)] supports-[backdrop-filter]:bg-zinc-950/70">
  <div class="mx-auto flex max-w-5xl items-center justify-between gap-4 px-4 py-3">
    <a href="/" class="leading-tight">
      <div class="text-sm font-semibold tracking-tight text-zinc-50 sm:text-base">Fraser Valley iPhone Repair</div>
      <div class="text-xs text-zinc-400">Mission, BC • Text 10am–10pm</div>
    </a>

    <nav class="hidden items-center gap-4 text-sm text-zinc-200 sm:flex">
      {nav.map((item) => (
        <a class="hover:text-white" href={item.href}>{item.label}</a>
      ))}
    </nav>

    <div class="flex items-center gap-2">
      <a class="btn-primary px-3 py-2 text-sm" href="sms:+16048095169">Text</a>
      <a class="btn-secondary px-3 py-2 text-sm" href="tel:+16048095169">Call</a>
    </div>
  </div>

  <nav class="border-t border-white/10 px-4 py-2 text-sm text-zinc-200 sm:hidden">
    <div class="mx-auto flex max-w-5xl gap-4">
      {nav.map((item) => (
        <a class="hover:text-white" href={item.href}>{item.label}</a>
      ))}
    </div>
  </nav>
</header>

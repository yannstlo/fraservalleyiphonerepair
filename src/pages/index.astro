---
import Layout from "../layouts/Layout.astro";
import SiteHeader from "../components/SiteHeader.astro";
import SiteFooter from "../components/SiteFooter.astro";

const phoneDisplay = "(604) 809-5169";
const phoneE164 = "+16048095169";

const services = [
  {
    title: "Screen replacement",
    desc: "Cracked glass, dead LCD, touch issues.",
  },
  {
    title: "Battery replacement",
    desc: "Fast swaps, better battery life.",
  },
  {
    title: "Charging issues",
    desc: "Port problems, cable not seating, intermittent charging.",
  },
  {
    title: "Water damage triage",
    desc: "Bring it in ASAP — we’ll advise next steps.",
  },
];

const howItWorks = [
  {
    title: "Text your model + issue",
    desc: "Send the iPhone model and what happened (cracked screen, lines, won’t charge, etc.).",
  },
  {
    title: "Get a quote + time",
    desc: "I’ll reply with options, pricing, and the soonest availability.",
  },
  {
    title: "Repair in front of you",
    desc: "Most repairs are completed in 30–45 minutes.",
  },
];

// NOTE: These are intentionally conservative claims.
// If you want stronger copy (e.g., exact warranty length, “same-day guaranteed”), tell me and I’ll update.
const googleReviewsUrl = "https://share.google/PExskCNXynymAMYbX";

const trustSignals = [
  { title: "Clear pricing", desc: "Quote before we start. No surprises." },
  { title: "90-day warranty", desc: "Parts & labour included." },
  { title: "Convenient hours", desc: "Daily 10am–10pm." },
];
---

<Layout title="iPhone repair in the Fraser Valley" description={`Fast iPhone repair in the Fraser Valley. Most repairs in 30–45 minutes. Text-first quotes in Mission, BC.`}>
  <SiteHeader />

  <main>
    <section class="mx-auto max-w-5xl px-4 py-14">
      <div class="grid gap-10">
        <div>
          <h1 class="text-3xl font-semibold tracking-tight sm:text-4xl">
            iPhone repair in the Fraser Valley
          </h1>
          <p class="mt-4 text-zinc-600 dark:text-zinc-300">
            Screen replacement, battery replacement, and more — repairs are done in front of you while you watch.
            Most repairs are completed in <span class="font-semibold text-zinc-100">30–45 minutes</span>.
          </p>

          <div class="mt-6 flex flex-wrap gap-3">
            <a class="btn-primary" href={`sms:${phoneE164}`}>Text for a quote</a>
            <a class="btn-secondary" href={`tel:${phoneE164}`}>Call</a>
            <a class="btn-secondary" href="/contact/">Directions & contact</a>
          </div>

          <ul class="mt-6 flex flex-wrap gap-2 text-sm text-zinc-600 dark:text-zinc-300">
            <li class="chip">Most repairs 30–45 min</li>
            <li class="chip">90-day warranty</li>
            <li class="chip">Text-first quotes</li>
          </ul>

          <dl class="mt-6 grid grid-cols-2 gap-4 text-sm">
            <div class="rounded-lg border border-zinc-200 bg-zinc-50 p-4 dark:border-white/10 dark:bg-white/5">
              <dt class="text-zinc-600 dark:text-zinc-300">Hours</dt>
              <dd class="mt-1 font-semibold">Daily 10am–10pm</dd>
            </div>
            <div class="rounded-lg border border-zinc-200 bg-zinc-50 p-4 dark:border-white/10 dark:bg-white/5">
              <dt class="text-zinc-600 dark:text-zinc-300">Location</dt>
              <dd class="mt-1 font-semibold">Mission, BC</dd>
            </div>
          </dl>

          <div class="mt-6 grid gap-3 sm:grid-cols-3">
            {trustSignals.map((item) => (
              <div class="rounded-lg border border-zinc-200 bg-zinc-50 p-4 text-sm dark:border-white/10 dark:bg-white/5">
                <div class="font-semibold text-zinc-900 dark:text-white">{item.title}</div>
                <div class="mt-1 text-zinc-600 dark:text-zinc-300">{item.desc}</div>
              </div>
            ))}
          </div>

          <div class="mt-4 flex flex-wrap items-center gap-3 text-sm">
            <a
              class="inline-flex items-center gap-2 rounded-md border border-zinc-200 bg-zinc-50 px-3 py-2 font-semibold text-zinc-900 hover:bg-zinc-100 dark:border-white/10 dark:bg-white/5 dark:text-zinc-100 dark:hover:bg-white/10"
              href={googleReviewsUrl}
              rel="noopener noreferrer"
              target="_blank"
            >
              <svg width="16" height="16" viewBox="0 0 256 262" aria-hidden="true" class="shrink-0">
                <!-- Simplified multicolor Google G -->
                <path fill="#4285F4" d="M255.9 133.5c0-11.3-1-19.6-3.2-28.2H130.6v53.4h71.7c-1.4 11.6-9.2 29.1-26.5 40.8l-.2 1.8 38.6 29.9 2.7.3c25-23.1 39-57.1 39-98.1Z"/>
                <path fill="#34A853" d="M130.6 261.1c36.1 0 66.4-11.9 88.5-32.5l-42.1-32.6c-11.3 7.9-26.5 13.4-46.4 13.4-35.3 0-65.2-23.1-75.9-55.1l-1.7.1-40.4 31.1-.6 1.6c22 43.7 67.2 74 118 74Z"/>
                <path fill="#FBBC05" d="M54.7 154.3c-2.8-8.4-4.4-17.4-4.4-26.7s1.6-18.3 4.2-26.7l-.1-1.8L13.6 67.5l-1.3.6C4.4 84.2 0 104 0 127.6c0 23.6 4.4 43.4 12.3 59.5l42.4-32.8Z"/>
                <path fill="#EA4335" d="M130.6 50.6c25.1 0 42 10.8 51.6 19.9l37.7-36.8C197 12.1 166.8 0 130.6 0 79.8 0 34.6 30.3 12.3 68.1l42.3 32.8c10.8-32 40.7-50.3 76-50.3Z"/>
              </svg>
              <span>Google Reviews</span>
            </a>
          </div>
        </div>

        <div class="overflow-hidden rounded-2xl border border-zinc-200 bg-gradient-to-br from-zinc-50 to-white dark:border-white/10 dark:from-white/5 dark:to-white/0">
          <img
            src="/images/fvir.png"
            alt="Fraser Valley iPhone Repair"
            loading="eager"
            width="1216"
            height="864"
            class="h-auto w-full border-b border-zinc-200 object-cover dark:border-white/10"
          />

          <div class="p-6">
            <h2 class="text-lg font-semibold">Popular services</h2>
            <ul class="mt-4 grid gap-3 text-sm text-zinc-700 dark:text-zinc-200">
              {services.map((service) => (
                <li class="rounded-lg border border-zinc-200 bg-zinc-50 p-4 dark:border-white/10 dark:bg-white/5">
                  <div class="flex items-start justify-between gap-4">
                    <div>
                      <div class="font-semibold text-zinc-900 dark:text-white">{service.title}</div>
                      <div class="mt-1 text-zinc-600 dark:text-zinc-300">{service.desc}</div>
                    </div>
                    <a class="link shrink-0 text-sm" href={`sms:${phoneE164}`}>Text for price</a>
                  </div>
                </li>
              ))}
            </ul>
            <div class="mt-5 flex flex-wrap items-center gap-3">
              <a class="link text-sm" href="/services/">See services & pricing →</a>
              <span class="text-sm text-zinc-400">or</span>
              <a class="link text-sm" href={`sms:${phoneE164}`}>text for a quote →</a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="border-y border-zinc-200 bg-zinc-50 dark:border-white/10 dark:bg-white/5">
      <div class="mx-auto max-w-5xl px-4 py-10">
        <h2 class="text-lg font-semibold">How it works</h2>
        <ol class="mt-4 grid gap-3 sm:grid-cols-3">
          {howItWorks.map((step, idx) => (
            <li class="rounded-lg border border-zinc-200 bg-white p-4 text-sm dark:border-white/10 dark:bg-white/5">
              <div class="text-zinc-500 dark:text-zinc-400">Step {idx + 1}</div>
              <div class="mt-1 font-semibold text-zinc-900 dark:text-white">{step.title}</div>
              <div class="mt-1 text-zinc-600 dark:text-zinc-300">{step.desc}</div>
            </li>
          ))}
        </ol>
        <div class="mt-6">
          <a class="btn-primary" href={`sms:${phoneE164}`}>Text for a quote</a>
        </div>
      </div>
    </section>

    <section>
      <div class="mx-auto max-w-5xl px-4 py-10">
        <h2 class="text-lg font-semibold">Areas served</h2>
        <p class="mt-2 text-zinc-600 dark:text-zinc-300">
          Serving the Fraser Valley from Surrey to Chilliwack, including Mission, Abbotsford, Langley, Maple Ridge,
          Pitt Meadows, and Aldergrove.
        </p>
      </div>
    </section>

    <section class="mx-auto max-w-5xl px-4 py-12">
      <h2 class="text-lg font-semibold">Questions? Text is best.</h2>
      <p class="mt-2 text-zinc-600 dark:text-zinc-300">
        Tell me your iPhone model and what happened (cracked screen, lines, no charge, etc.). I’ll reply with options
        and a quote.
      </p>
      <div class="mt-5">
        <a class="btn-primary" href={`sms:${phoneE164}`}>Text for a quote</a>
      </div>
    </section>
  </main>

  <SiteFooter />
</Layout>

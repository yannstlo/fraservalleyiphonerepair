---
import Layout from "../layouts/Layout.astro";
import SiteHeader from "../components/SiteHeader.astro";
import SiteFooter from "../components/SiteFooter.astro";

const phoneDisplay = "(604) 809-5169";
const phoneE164 = "+16048095169";

const services = [
  {
    title: "Screen replacement",
    desc: "Cracked glass, dead LCD, touch issues.",
  },
  {
    title: "Battery replacement",
    desc: "Fast swaps, better battery life.",
  },
  {
    title: "Charging issues",
    desc: "Port problems, cable not seating, intermittent charging.",
  },
  {
    title: "Water damage triage",
    desc: "Bring it in ASAP — we’ll advise next steps.",
  },
];

const howItWorks = [
  {
    title: "Text your model + issue",
    desc: "Send the iPhone model and what happened (cracked screen, lines, won’t charge, etc.).",
  },
  {
    title: "Get a quote + time",
    desc: "I’ll reply with options, pricing, and the soonest availability.",
  },
  {
    title: "Repair in front of you",
    desc: "Most repairs are completed in 30–45 minutes.",
  },
];

// NOTE: These are intentionally conservative claims.
// If you want stronger copy (e.g., exact warranty length, “same-day guaranteed”), tell me and I’ll update.
const googleReviewsUrl = "https://share.google/PExskCNXynymAMYbX";

const trustSignals = [
  { title: "Clear pricing", desc: "Quote before we start. No surprises." },
  { title: "90-day warranty", desc: "Parts & labour included." },
  { title: "Convenient hours", desc: "Daily 10am–10pm." },
];
---

<Layout title="iPhone repair in the Fraser Valley" description={`Fast iPhone repair in the Fraser Valley. Most repairs in 30–45 minutes. Text ${phoneDisplay}.`}>
  <SiteHeader />

  <main>
    <section class="mx-auto max-w-5xl px-4 py-14">
      <div class="grid gap-10">
        <div>
          <h1 class="text-3xl font-semibold tracking-tight sm:text-4xl">
            iPhone repair in the Fraser Valley
          </h1>
          <p class="mt-4 text-zinc-300">
            Screen replacement, battery replacement, and more — repairs are done in front of you while you watch.
            Most repairs are completed in <span class="font-semibold text-zinc-100">30–45 minutes</span>.
          </p>

          <div class="mt-6 flex flex-wrap gap-3">
            <a class="btn-primary" href={`sms:${phoneE164}`}>Text for a quote</a>
            <a class="btn-secondary" href={`tel:${phoneE164}`}>Call {phoneDisplay}</a>
            <a class="btn-secondary" href="/contact/">Contact info</a>
          </div>

          <ul class="mt-6 flex flex-wrap gap-2 text-sm text-zinc-300">
            <li class="chip">Mission, BC</li>
            <li class="chip">Most repairs 30–45 min</li>
            <li class="chip">Text-first quotes</li>
          </ul>

          <dl class="mt-6 grid grid-cols-2 gap-4 text-sm">
            <div class="rounded-lg border border-white/10 bg-white/5 p-4">
              <dt class="text-zinc-300">Hours</dt>
              <dd class="mt-1 font-semibold">Daily 10am–10pm</dd>
            </div>
            <div class="rounded-lg border border-white/10 bg-white/5 p-4">
              <dt class="text-zinc-300">Location</dt>
              <dd class="mt-1 font-semibold">Mission, BC</dd>
            </div>
          </dl>

          <div class="mt-6 grid gap-3 sm:grid-cols-3">
            {trustSignals.map((item) => (
              <div class="rounded-lg border border-white/10 bg-white/5 p-4 text-sm">
                <div class="font-semibold text-white">{item.title}</div>
                <div class="mt-1 text-zinc-300">{item.desc}</div>
              </div>
            ))}
          </div>

          <div class="mt-4 text-sm text-zinc-300">
            <a class="link" href={googleReviewsUrl} rel="noopener noreferrer" target="_blank">Read Google reviews →</a>
          </div>
        </div>

        <div class="overflow-hidden rounded-2xl border border-white/10 bg-gradient-to-br from-white/5 to-white/0">
          <img
            src="/images/fvir.png"
            alt="Fraser Valley iPhone Repair"
            loading="eager"
            width="1216"
            height="864"
            class="h-auto w-full border-b border-white/10 object-cover"
          />

          <div class="p-6">
            <h2 class="text-lg font-semibold">Popular services</h2>
            <ul class="mt-4 grid gap-3 text-sm text-zinc-200">
              {services.map((service) => (
                <li class="rounded-lg border border-white/10 bg-white/5 p-4">
                  <div class="flex items-start justify-between gap-4">
                    <div>
                      <div class="font-semibold text-white">{service.title}</div>
                      <div class="mt-1 text-zinc-300">{service.desc}</div>
                    </div>
                    <a class="link shrink-0 text-sm" href={`sms:${phoneE164}`}>Text for price</a>
                  </div>
                </li>
              ))}
            </ul>
            <div class="mt-5 flex flex-wrap gap-3">
              <a class="link text-sm" href="/services/">See services & pricing →</a>
              <span class="text-sm text-zinc-400">or</span>
              <a class="link text-sm" href={`sms:${phoneE164}`}>text {phoneDisplay} →</a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="border-y border-white/10 bg-white/5">
      <div class="mx-auto max-w-5xl px-4 py-10">
        <h2 class="text-lg font-semibold">How it works</h2>
        <ol class="mt-4 grid gap-3 sm:grid-cols-3">
          {howItWorks.map((step, idx) => (
            <li class="rounded-lg border border-white/10 bg-white/5 p-4 text-sm">
              <div class="text-zinc-400">Step {idx + 1}</div>
              <div class="mt-1 font-semibold text-white">{step.title}</div>
              <div class="mt-1 text-zinc-300">{step.desc}</div>
            </li>
          ))}
        </ol>
        <div class="mt-6">
          <a class="btn-primary" href={`sms:${phoneE164}`}>Text for a quote</a>
        </div>
      </div>
    </section>

    <section>
      <div class="mx-auto max-w-5xl px-4 py-10">
        <h2 class="text-lg font-semibold">Areas served</h2>
        <p class="mt-2 text-zinc-300">
          Serving the Fraser Valley from Surrey to Chilliwack, including Mission, Abbotsford, Langley, Maple Ridge,
          Pitt Meadows, and Aldergrove.
        </p>
      </div>
    </section>

    <section class="mx-auto max-w-5xl px-4 py-12">
      <h2 class="text-lg font-semibold">Questions? Text is best.</h2>
      <p class="mt-2 text-zinc-300">
        Tell me your iPhone model and what happened (cracked screen, lines, no charge, etc.). I’ll reply with options
        and a quote.
      </p>
      <div class="mt-5">
        <a class="btn-primary" href={`sms:${phoneE164}`}>Text {phoneDisplay}</a>
      </div>
    </section>
  </main>

  <SiteFooter />
</Layout>

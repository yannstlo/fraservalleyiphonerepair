---
import Layout from "../../layouts/Layout.astro";
import SiteHeader from "../../components/SiteHeader.astro";
import SiteFooter from "../../components/SiteFooter.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog", ({ data }) => !data.draft))
  .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime());

function extractFirstImageSrc(body) {
  if (!body) return null;
  // Posts imported from Blogger often contain raw HTML.
  const m = body.match(/<img[^>]*\ssrc=["']([^"']+)["'][^>]*>/i);
  return m?.[1] || null;
}

function pickThumb(post) {
  return post.data.heroImage || extractFirstImageSrc(post.body) || null;
}
---

<Layout title="Blog" description="Tips, repairs, and updates from Fraser Valley iPhone Repair.">
  <SiteHeader />

  <main class="mx-auto max-w-5xl px-4 py-12">
    <h1 class="text-3xl font-semibold tracking-tight">Blog</h1>
    <p class="mt-3 text-zinc-300">Tips, repairs, and updates.</p>

    <div class="mt-8 grid gap-4">
      {posts.map((post) => {
        const thumb = pickThumb(post);
        return (
          <a
            href={`/blog/${post.slug}/`}
            class="block rounded-2xl border border-white/10 bg-white/5 p-5 hover:bg-white/10"
          >
            <div class="flex gap-4">
              <div class="shrink-0">
                {thumb ? (
                  <img
                    src={thumb}
                    alt=""
                    loading="lazy"
                    class="h-16 w-16 rounded-lg border border-white/10 bg-white/5 object-cover"
                  />
                ) : (
                  <div class="h-16 w-16 rounded-lg border border-white/10 bg-white/5" aria-hidden="true" />
                )}
              </div>

              <div class="min-w-0">
                <div class="text-sm text-zinc-400">
                  {post.data.pubDate.toLocaleDateString("en-CA", { year: "numeric", month: "short", day: "numeric" })}
                </div>
                <div class="mt-1 truncate text-lg font-semibold">{post.data.title}</div>
                {post.data.description && <div class="mt-2 line-clamp-2 text-zinc-300">{post.data.description}</div>}
              </div>
            </div>
          </a>
        );
      })}

      {posts.length === 0 && (
        <div class="rounded-2xl border border-white/10 bg-white/5 p-6 text-zinc-300">
          No posts yet.
        </div>
      )}
    </div>
  </main>

  <SiteFooter />
</Layout>

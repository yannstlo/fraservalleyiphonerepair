---
import Layout from "../layouts/Layout.astro";
import SiteHeader from "../components/SiteHeader.astro";
import SiteFooter from "../components/SiteFooter.astro";
import fs from "node:fs/promises";
import path from "node:path";

const museumDir = path.join(process.cwd(), "public", "images", "museum");

function titleFromFilename(filename) {
  return filename
    .replace(/\.[^.]+$/, "")
    .replace(/\(\d+\)$/, "")
    .replace(/[-_]+/g, " ")
    .trim();
}

const files = (await fs.readdir(museumDir)).filter((f) => f.toLowerCase() !== "readme.md");
files.sort((a, b) => a.localeCompare(b, undefined, { numeric: true, sensitivity: "base" }));

const images = files.map((file) => ({
  src: `/images/museum/${file}`,
  alt: titleFromFilename(file),
}));
---

<Layout
  title="Museum"
  description="A few of the more spectacular iPhone disasters (and saves) we've seen in the Fraser Valley."
>
  <SiteHeader />

  <main class="mx-auto max-w-5xl px-4 py-12">
    <h1 class="text-3xl font-semibold tracking-tight">Museum</h1>
    <p class="mt-3 text-zinc-300">
      Some of the more spectacular iPhone disasters (and saves) over the years.
    </p>

    {images.length === 0 ? (
      <div class="mt-8 rounded-2xl border border-white/10 bg-white/5 p-6 text-zinc-300">
        No museum images yet.
        <div class="mt-2 text-sm text-zinc-400">
          Add files to <code class="rounded bg-white/10 px-1 py-0.5">public/images/museum/</code>.
        </div>
      </div>
    ) : (
      <div class="mt-8 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
        {images.map((img) => (
          <figure class="overflow-hidden rounded-2xl border border-white/10 bg-white/5">
            <img src={img.src} alt={img.alt} loading="lazy" class="aspect-square w-full object-cover" />
            {img.alt && <figcaption class="p-3 text-sm text-zinc-300">{img.alt}</figcaption>}
          </figure>
        ))}
      </div>
    )}

    <div class="mt-10 rounded-2xl border border-white/10 bg-white/5 p-6">
      <div class="text-sm text-zinc-300">
        Have a broken phone? Text is best â€” include your model + what happened.
      </div>
      <div class="mt-4">
        <a class="rounded-md bg-emerald-500 px-4 py-3 font-semibold text-zinc-950 hover:bg-emerald-400" href="sms:+16048095169">
          Text (604) 809-5169
        </a>
      </div>
    </div>
  </main>

  <SiteFooter />
</Layout>
